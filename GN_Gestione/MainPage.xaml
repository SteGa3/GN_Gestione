                    <Button Text="Cerca Cliente"
                            x:Name="CercaCliente"
                            Clicked="GoToSearchCustomer"
                            FontSize="25"
                            Grid.Column="1"
                            Grid.Row="1"
                           
                            BackgroundColor="Orange"
                            TextColor="White"
                            HeightRequest="50"
                            WidthRequest="120"/>  

                    <Button Text="Lista Clienti"
                            x:Name="ListaClienti"
                            Clicked="GoToListAll"
                            FontSize="25"
                            Grid.Column="1"
                            Grid.Row="1"
                           
                            BackgroundColor="Orange"
                            TextColor="White"
                            HeightRequest="50"
                            WidthRequest="120"/>


                    <Button Text="Aggiungi Cliente"
                            x:Name="AggiungiCliente"
                            Clicked="GoToAddRetailCustomer"
                            FontSize="25"
                            Grid.Column="1"
                            Grid.Row="1"
                           
                            BackgroundColor="Orange"
                            TextColor="White"
                            HeightRequest="50"
                            WidthRequest="120"/>

                    <Button Text="VENDITA"
                            x:Name="vendita"
                            Clicked="GoToAddRetailCustomer"
                            FontSize="25"
                            Grid.Column="1"
                            Grid.Row="3"
                           
                            BackgroundColor="Purple"
                            TextColor="White"
                            HeightRequest="50"
                            WidthRequest="120"/>


                    <Button Text="IMPOSTAZIONI"
                            x:Name="impostazioni"
                            Clicked="GoToSettings"
                            FontSize="25"
                            Grid.Column="1"
                            Grid.Row="3"
                           
                            BackgroundColor="Purple"
                            TextColor="White"
                            HeightRequest="50"
                            WidthRequest="120"/>

                    <Label  x:Name="StatoFile"
                            Margin="80"
                            FontSize="25"
                            Grid.Column="1"
                            Grid.Row="2"
                            BackgroundColor="White"
                            HorizontalTextAlignment="Center"
                            TextColor="Black"
                            HeightRequest="50"
                            WidthRequest="120"/>

                    
                    
                          
                  
                    

                    
